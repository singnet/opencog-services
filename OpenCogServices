RUN cat ./snetd_configs/snetd.mainnet.json | sed "s/__NETWORK__/${network}/g" > ./snetd_configs/snetd.mainnet.json.tmp && mv ./snetd_configs/snetd.mainnet.json.tmp ./snetd_configs/snetd.mainnet.json
